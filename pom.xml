<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <organization>
        <name>ZČU KIV</name>
        <url>http://www.kiv.zcu.cz</url>
    </organization>

    <modelVersion>4.0.0</modelVersion>
    <groupId>cz.zcu.kiv.crce</groupId>
    <artifactId>crce-reactor</artifactId>
    <version>1.0.0-SNAPSHOT</version>

    <name>CRCE - Reactor</name>

    <description>Component Repository supporting Compatibility Evaluation</description>

    <url>https://www.assembla.com/spaces/crce/</url>
    
    <properties>
        <org.osgi.service.http.port>8080</org.osgi.service.http.port>
        <org.osgi.service.http.port.secure>8443</org.osgi.service.http.port.secure>
        <org.osgi.service.http.secure.enabled>false</org.osgi.service.http.secure.enabled>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <felix.fileinstall.bundles.new.start>false</felix.fileinstall.bundles.new.start>
        <felix.fileinstall.poll>2000</felix.fileinstall.poll>
        <felix.fileinstall.dir>../conf</felix.fileinstall.dir>
        <felix.fileinstall.filter>.*\\.cfg</felix.fileinstall.filter>
        <org.ops4j.pax.logging.DefaultServiceLog.level>WARN</org.ops4j.pax.logging.DefaultServiceLog.level> <!-- DEBUG, INFO, WARN, ERROR-->
    </properties>

    <packaging>pom</packaging>

    <modules>
        <module>poms</module>
        <module>provision</module>
        
        <module>crce-target</module>
        
        <!-- API -->
        <module>crce-plugin-api</module>
        <module>crce-metadata-api</module>
        <module>crce-metadata-dao-api</module>
        <module>crce-repository-api</module>
        <module>crce-results-api</module>
        
        <!-- API Implementation -->
        <module>crce-metadata-impl</module>
        <module>crce-repository-impl</module>
        <module>crce-results-impl</module>
        
        <!-- Core Plugins -->
        <module>crce-metadata-indexer</module>
        <module>crce-metadata-metafile</module>
        <module>crce-metadata-combined</module>
        
        <!-- Indexers -->
        <module>crce-metadata-osgi-bundle</module>
        <module>crce-metadata-cosi-bundle</module>
        <module>crce-efp-indexer</module>
        <module>crce-efp-library</module>
        
        <!-- UI & Optional Plugins -->
        <module>crce-handler-versioning</module>
        <module>crce-webui</module>
    </modules>

    <build>
        <plugins>
            <plugin>
                <groupId>org.ops4j</groupId>
                <artifactId>maven-pax-plugin</artifactId>
                <version>1.4</version>
                <configuration>
                    <provision>
                        <param>--platform=felix</param>
                        <param>--repositories=http://repo1.maven.org/maven2,http://repository.ops4j.org/maven2,http://subversion.assembla.com/svn/crce/third-parties,http://subversion.assembla.com/svn/crce/releases,http://subversion.assembla.com/svn/crce/snapshots</param>
                    </provision>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.3.2</version>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                    <encoding>${project.build.sourceEncoding}</encoding>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>2.4.3</version>
                <configuration>
                    <encoding>${project.build.sourceEncoding}</encoding>
                </configuration>
                <executions>
                    <execution>
                        <id>copy-resources</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>conf</outputDirectory>
                            <resources>          
                                <resource>
                                    <directory>conf.default</directory>
                                </resource>
                            </resources>
                            <overwrite>false</overwrite>
                        </configuration>            
                    </execution>
                </executions>
            </plugin>
        </plugins>
        <extensions>
            <extension>
                <groupId>com.google.code.maven-svn-wagon</groupId>
                <artifactId>maven-svn-wagon</artifactId>
                <version>1.3</version>
            </extension>
        </extensions>
    </build>

    <distributionManagement>
        <repository>
            <id>crce.maven.repository.releases</id>
            <name>CRCE Releases Repository</name>
            <url>svn:http://subversion.assembla.com/svn/crce/releases</url>
        </repository>
        <snapshotRepository>
            <id>crce.maven.repository.snapshots</id>
            <name>CRCE Snapshots Repository</name>
            <url>svn:http://subversion.assembla.com/svn/crce/snapshots</url>
        </snapshotRepository>
    </distributionManagement>

    <repositories>
        <repository>
            <id>central</id>
            <url>http://repo1.maven.org/maven2/</url>
        </repository>
        <repository>
            <id>crce.maven.repository.releases</id>
            <url>svn:http://subversion.assembla.com/svn/crce/releases</url>
        </repository>
        <repository>
            <id>crce.maven.repository.snapshots</id>
            <url>svn:http://subversion.assembla.com/svn/crce/snapshots</url>
        </repository>
        <repository>
            <id>crce.maven.repository.third-parties</id>
            <url>svn:http://subversion.assembla.com/svn/crce/third-parties</url>
        </repository>
    </repositories>

    <developers>
        <developer>
            <id>kalwi</id>
            <name>Jiří Kučera</name>
        </developer>
    </developers>
    
</project>