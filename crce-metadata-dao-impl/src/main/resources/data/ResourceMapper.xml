        <resultMap type="cz.zcu.kiv.crce.metadata.dao.internal.tables.Requirement" id="resourcemap7">
		<id column="internal_id" property="internal_id"/>
                <id column="id" property="id"/>
                <id column="namespace" property="namespace"/>
