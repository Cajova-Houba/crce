    <artifactId>crce-jersey-hack</artifactId>
    <packaging>bundle</packaging>

    <name>CRCE - Jersey Hack</name>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Import-Package>
                            org.objectweb.asm;version="[3.1,4.0)",
                            org.objectweb.asm.commons;version="[3.1,4.0)",
                            org.objectweb.asm.signature,
                        </Import-Package>
                        <Fragment-Host>com.sun.jersey.jersey-server</Fragment-Host>
                        <Private-Package/>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

